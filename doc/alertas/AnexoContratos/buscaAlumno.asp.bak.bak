<%
Dim sqlAlumnos, cnIndex, rsAlumnos

Set cnIndex = Server.CreateObject ("ADODB.Connection")
Set rsAlumnos = Server.CreateObject ("ADODB.Recordset")

cnIndex.Open "driver={SQL Server};server=192.168.200.228; database=Matricula; uid=sa;pwd=Sa070507"

sqlAlumnos = "SELECT TOP 200 CODCLI, DIG, PATERNO, MATERNO, NOMBRE, NOMBRE_C, ANO_MAT FROM dbo.SEK_Alumnos_Matriculados_Total_Anexo_Contrato"

If request("cedula") <> "" Then
	sqlAlumnos = sqlAlumnos & " WHERE CODCLI LIKE '%"& request("cedula") &"%'"
End If

If request("paterno") <> "" and request("cedula") <> "" Then
	sqlAlumnos = sqlAlumnos & " AND PATERNO LIKE '%"& request("paterno") &"%'"
    else if request("paterno") <> "" then
    sqlAlumnos = sqlAlumnos & " Where PATERNO LIKE '%"& request("paterno") &"%'"
    end if
End If

If (request("paterno") <> "" or request("cedula") <> "") and request("materno") <> "" Then
	sqlAlumnos = sqlAlumnos & " AND MATERNO LIKE '%"& request("materno") &"%'"
    else if request("materno") <> "" then
    sqlAlumnos = sqlAlumnos & " Where MATERNO LIKE '%"& request("materno") &"%'"
    end if 
End If

If  (request("paterno") <> "" or request("cedula") <> "" or request("materno") <> "") and request("nombre") <> "" Then
	sqlAlumnos = sqlAlumnos & " AND NOMBRE LIKE '%"& request("nombre") &"%'"
    else if request("nombre") <> "" then
    sqlAlumnos = sqlAlumnos & " Where NOMBRE LIKE '%"& request("nombre") &"%'"
    end if 
End If
	sqlAlumnos = sqlAlumnos & " ORDER BY dbo.MT_CLIENT.PATERNO "

'response.Write sqlAlumnos
rsAlumnos.Open sqlAlumnos, cnIndex

%>
